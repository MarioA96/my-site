---
import { Icon } from "astro-icon/components";
import { css, cva, cx } from "../../../../styled-system/css";

const HeroNavStyles = cva({
    base: {
        display: 'flex',
        width: '100%',
        height: {
            xsm: '72px',
            md: '56px'
        },
        marginTop: {
            xsm: '0px',
            md: '24px'
        },
        backgroundColor: '#161515',
        '& ul[id^=nav-list]': {
            display: 'flex',
            justifyContent: 'center',
            alignItems: 'center',
            alignSelf: 'center',
            width: '100%',
            height: 'fit-content',
            flexDirection: 'row',
            borderRadius: {
                xsm: '0px',
                md: '30px'
            }, 
            border: '1px solid rgba(172, 172, 172, 0.3)',
            backgroundColor: 'red.700', //#1a1a1a
            gap: '70px',
            "& li[id^='nav__list_']": {
                display: 'flex',
                '& .text-list': {
                    display: {
                        xsm: 'none',
                        md: 'flex'
                    }
                },
                '& .icon-list': {
                    display: {
                        xsm: 'none',
                        md: 'flex'
                    }
                },
            },
        }
    }
});
---

<nav id="hero__nav" class={cx( HeroNavStyles({}) )}>
    <ul id="nav-list" class="ul__nav-list">
        <li id="nav__list_Home">
            <span class="text-list">HOME</span>
            <Icon class="icon-list" name="logos/navbar/home" class="text-white h-7 w-7" />
        </li>
        <li id="nav__list_Projects">
            <span class="text-list">PROJECTS</span>
            <Icon class="icon-list" name="logos/navbar/folder" class="text-gray-200 h-7 w-7" />
        </li>
        <li id="nav__list_Contact">
            <span class="text-list">CONTACT</span>
            <Icon class="icon-list" name="logos/navbar/cursor" class="text-gray-200 h-7 w-7" />
        </li>
    </ul> 
</nav>

<style>
    @reference "../../../styles/global.css"
    
    .ul__nav-list {
        @apply w-auto font-semibold -mt-40
    }
</style>