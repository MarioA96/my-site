---
import { Icon } from "astro-icon/components";
import { cva, cx } from "../../../../styled-system/css";

const HeroNavStyles = cva({
    base: {
        display: 'flex',
        width: '100%',
        height: {
            xsm: '72px',
            md: '56px'
        },
        marginTop: {
            xsm: '0px',
            md: '24px'
        },
        backgroundColor: '#161515',
        '& ul[id^=ul__nav-list]': {
            display: 'flex',
            justifyContent: 'center',
            alignItems: 'center',
            alignSelf: 'center',
            width: '100%',
            height: 'fit-content',
            flexDirection: 'row',
            borderRadius: {
                xsm: '0px',
                md: '30px'
            }, 
            border: '1px solid rgba(172, 172, 172, 0.3)',
            gap: '60px',
            "& li[id^='li__list_']": {
                display: 'flex',
                '& .text-list': {
                    display: {
                        xsm: 'none',
                        md: 'flex'
                    }
                },
                '& .box__icon-list': {
                    display: {
                        xsm: 'flex',
                        md: 'none'
                    },
                    flexDirection: 'column',
                    alignItems: 'center',
                    justifyContent: 'center',
                    fontWeight: '500',
                    fontFamily: 'ubuntu_medium',
                    color: {
                        base: 'gray.500',
                        _hover: 'white'
                    }
                },
            },
        }
    }
});
---

<nav id="hero__nav" class={cx( HeroNavStyles({}) )}>
    <ul id="ul__nav-list" class:list={["ul-tw-styles"]}>
        <li id="li__list_Home">
            <span class="text-list">HOME</span>
            <div class:list={["box__icon-list"]}>
                <Icon class="icon-list" name="logos/navbar/home" class="h-7 w-7" />
                <span>Home</span>
            </div>
        </li>
        <li id="li__list_Projects">
            <span class="text-list">PROJECTS</span>
            <div class="box__icon-list">
                <Icon class="icon-list" name="logos/navbar/folder" class="h-7 w-7" />
                <span>Projects</span>
            </div>
        </li>
        <li id="li__list_Contact">
            <span class="text-list">CONTACT</span>
            <div class="box__icon-list">
                <Icon class="icon-list" name="logos/navbar/cursor" class="h-7 w-7" />
                <span>Contact</span>
            </div>
        </li>
    </ul> 
</nav>

<style>
    @reference "../../../styles/global.css";
    
    .ul-tw-styles {
        @apply -mt-1
    }
</style>