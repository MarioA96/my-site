---
import { css, cva, cx } from "../../../../styled-system/css";

const HeroNavStyles = cva({
    base: {
        display: 'flex',
        width: '100%',
        height: '56px',
        marginTop: '24px',
        backgroundColor: '#161515',
        justifyContent: 'center',
        alignItems: 'center',
        '&#nav-list': {
            borderRadius: '30px', 
            border: '1px solid rgba(172, 172, 172, 0.3)'
        }
    }
});
---

<nav id="hero__nav" class={cx( HeroNavStyles({}) )}>
    <ul id="nav__list" class:list={["flex flex-row h-fit w-auto font-semibold space-x-9 px-16 py-3 bg-[#1a1a1a]"]}>
        <li id="nav__list_Home" class="text-gray-200">
            HOME
        </li>
        <li id="nav__list_Projects" class="text-gray-500">
            PROJECTS
        </li>
        <li id="nav__list_Contact" class="text-gray-500">
            CONTACT
        </li>
    </ul>
</nav>

<style>
    @reference "../../../styles/global.css"

    .nav-list {
        @apply 
    }
</style>