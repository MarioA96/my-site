---
import { grid, gridItem } from "../../../../styled-system/patterns";
import { css, cx, cva } from "../../../../styled-system/css";

import { Icon } from "astro-icon/components";


const presentationName: string = "Que tal, soy Mario Alberto";
const presentationCharge: string = "Software Developer";

const socials = [
    {
        name: 'github',
        url: '',
        file: 'logos/github'
    },
    {
        name: 'linkedin',
        url: '',
        file: 'logos/linkedin',
    },
    {
        name: 'medium',
        url: '',
        file: 'logos/medium2',
    },
    {
        name: 'frontendmentor',
        url: '',
        file: 'logos/frontendmentor',
    },
    {
        name: 'email',
        url: '',
        file: 'logos/email',
    },
]

const ContentLeftStyles = cva({
    base: {
        display: 'flex', 
        flexDirection: 'column', 
        backgroundColor: '#161515', 
        height: '100%', 
        width: '100%'
    }
});

const ULSocialsStyles = cva({
	base: {
		marginTop: '32px',
        height: '15%', 
		alignItems: 'center', 
		paddingLeft: '16px',
		'& li': {
			height: '100%', 
			width: '100%',
			'& .icon_logo': {
				height: '100%', 
				width: '100%', 
				color: 'white'
			}
		}
	}
});

//* Elementos de pandaCss no se renderizan desde un Astro.props en primera instancia, pero ante alteraciones, este si cambia su verdadero valor
// no al menos de que se renderice on una isla y client:load
// const { gridItemColSpan } = Astro.props;
---

<div id="content_left" class={cx( gridItem({ colSpan: 4 }), ContentLeftStyles() )}>
    
    <div id="content_left__name" class={cx("pt-5 text-gray-400", css({ width: '100%', height: '25%', fontSize: '18px' }))}>
        { presentationName }
    </div>

    <div id="content_left__title" class={cx("text-white text-7xl  font-medium", css({ width: '100%',height: '60%' }))}>
        { presentationCharge }
    </div>

    <ul id="content_left__socials" class={cx( grid({columns: 8}), ULSocialsStyles() )}>
        {
            socials.map( social => (
                <li class={cx( gridItem({ colSpan: 1 }) )}>
                    <Icon name={social.file} class="icon_logo"/> 
                </li>
            ))
        }
    </ul>

</div>