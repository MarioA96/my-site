---
import { grid, gridItem } from "../../../../styled-system/patterns";
import { css, cx, cva } from "../../../../styled-system/css";

import { Icon } from "astro-icon/components";


const presentationName: string = "Que tal, soy Mario Alberto";
const presentationCharge: string = "Software Developer";

const socials = [
    {
        name: 'github',
        url: '',
        file: 'logos/github'
    },
    {
        name: 'linkedin',
        url: '',
        file: 'logos/linkedin',
    },
    {
        name: 'medium',
        url: '',
        file: 'logos/medium2',
    },
    {
        name: 'frontendmentor',
        url: '',
        file: 'logos/frontendmentor',
    },
    {
        name: 'email',
        url: '',
        file: 'logos/email',
    },
]

const ContentLeftStyles = cva({
    base: {
        display: 'flex', 
        flexDirection: 'column', 
        backgroundColor: '#161515', 
        height: '100%', 
        width: '100%',
        "& #content_left__name": {
            width: '100%', 
            height: '25%', 
            fontSize: '15px',
            color: 'gray.400',
        },
        "& #content_left__title": {
            width: '100%',
            height: '60%',
            color: 'white',
            fontSize: {
                xsm: '48px',
                md: '72px'
            },
            fontFamily: 'ubuntu_medium',
        }
    }
});

const ULSocialsStyles = cva({
	base: {
		height: '15%', 
		alignItems: 'center',
		'& li': {
			height: '100%', 
			width: '100%',
			'& .icon_logo': {
				height: '85%', 
				width: '80%', 
				color: 'white'
			}
		}
	}
});

//* Elementos de pandaCss no se renderizan desde un Astro.props en primera instancia, pero ante alteraciones, este si cambia su verdadero valor
// no al menos de que se renderice on una isla y client:load
// const { gridItemColSpan } = Astro.props;
---

<div id="content_left" class={cx( gridItem({ colSpan: 4 }), ContentLeftStyles() )}>
    
    <div id="content_left__name" class="tw-content-name">
        { presentationName }
    </div>

    <div id="content_left__title" class="tw-content-title">
        { presentationCharge }
    </div>

    <ul id="content_left__socials" class={cx( "tw-content-socials", grid({columns: 8}), ULSocialsStyles() )}>
        {
            socials.map( social => (
                <li class={cx( gridItem({ colSpan: 1 }) )}>
                    <Icon name={social.file} class="icon_logo"/> 
                </li>
            ))
        }
    </ul>

</div>

<style>

    @reference "../../../styles/global.css";
    
    .tw-content-name {
        @apply pl-4 pt-5
    }
    .tw-content-title {
        @apply leading-none pl-4 pt-2 mt-4 md:mt-0
    }
    .tw-content-socials {
        @apply pl-4 mt-5 md:mt-8
    }

</style>