---
import { cx, cva } from "../../../../styled-system/css";
import { grid, gridItem } from "../../../../styled-system/patterns";

const ContactStyles = cva({

    base: {
        width: '70%',
        height: '350px',
        display: 'flex',
        flexDirection: 'column',
        backgroundColor: 'red.200',
        '& #content_box': {
            display: 'flex',
            order: '2',
            width: '100%',
            height: {
                xsm: 'fit-content',
                md: '270px'
            },
            backgroundColor: 'amber.300'
        }
    }

});
---

<div id="contact__container" class={cx( ContactStyles() )}>

    <div id="upper_box" class="flex w-full h-[80px] flex-col bg-amber-300 order-1">
    </div>
    <div id="content_box" class={ cx( grid({ columns: 12 }) )}>
        <div id="info_content__box" class={cx( gridItem({ colSpan: 6 }), "w-full h-full bg-amber-700" )}></div>
        <div id="form_content_box" class={cx( gridItem({ colSpan: 6 }), "w-full h-full bg-amber-900" )}></div>
    </div>

</div>