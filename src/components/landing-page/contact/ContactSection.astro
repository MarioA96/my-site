---
import { cx, cva, css } from "../../../../styled-system/css";
import { grid, gridItem } from "../../../../styled-system/patterns";


const colorPalette = {
    primaryHeadingFontColor: 'rgb(163,118,254)',
    primaryFontColor: 'white',
    primaryCardBgColor: 'rgb(31,31,31)',
    primaryMuteFontColor: 'rgb(152,152,152)'
}

const ContactStyles = cva({

    base: {
        display: 'flex',
        width: {
            xsm: '90%',
            md: '70%'
        },
        height: 'fit-content',
        flexDirection: {
            xsm: 'column',
            md: 'row'
        }
    }
});

const upperBoxStyles = cva({
    base: {
        display: 'flex',
        order: '1',
        width: {
            xsm: '100%',
            md: '50%'
        },
        height: 'fit-content',
        flexDirection: 'column',
        '& #upper_subject': {
            fontFamily: 'ubuntu_medium',
            fontSize: 'xl'
        },
        '& #upper_title': {
            fontFamily: 'ubuntu_medium',
            fontSize: '3xl',
            color: colorPalette.primaryFontColor,
        },
        '& #info_content__box': {
            display: 'flex',
            order: '1',
            width: '100%',
            height: 'fit-content',
            flexDirection: {
                xsm: 'column',
                md: 'row'
            },
            color: colorPalette.primaryMuteFontColor,
            fontFamily: 'ubuntu_light'
        },
    }
});

const contentBoxStyles = cva({
    base: {
        display: 'flex',
        order: '2',
        width: {
            xsm: '100%',
            md: '50%'
        },
        height: {
            xsm: 'fit-content',
            md: '270px'
        },
        flexDirection: {
            xsm: 'column',
            md: 'row'
        },
        // backgroundColor: 'amber.300',
        '& #form_content__box': { //Make a component out of this alone or seperate in a different block
            display: 'flex',
            order: '2',
            flexDirection: 'column',
            // backgroundColor: 'amber.400',
            width: {
                xsm: '100%'
            },
            height: {
                xsm: 'fit-content'
            },
            '& button#submit_button': {
                display: 'flex',
                width: {
                    xsm: '100%'
                },
                height: '45px',
                rounded: 'sm',
                cursor: 'pointer',
                alignItems: 'center',
                justifyContent: 'center',
                fontFamily: 'ubuntu_regular'
            }
        }
    }
});

---

<div id="contact__container" class={cx( ContactStyles() )}>

    <div id="upper_box" class={cx( upperBoxStyles({}) )}>
        <span id="upper_subject" class:list={[ "tw-upper-title shiny-text" ]}>Charlemos</span>
        <span id="upper_title">Contacto</span>
        <div id="info_content__box">
            <span id="info_content__description" class="text-[16px]">
                ¿Tienes alguna pregunta o preyecto en mente? Contactame.
            </span>
            <span id="info_content__location" class="flex tw-info_content__location">
                Dirección:&nbsp;&nbsp;<p class="text-[#dfdfdf]">{"Aqui va una direccion"}</p>
            </span>
        </div>
    </div>

    <div id="content_box" class={ cx( contentBoxStyles({}), "tw-content_box" )}>
        <form id="form_content__box" class="tw-form_content__box">
            <input type="text" id="input_name" class="tw-form_input" placeholder="Nombre">
            <input type="email" id="input_email" class="tw-form_input" placeholder="Email">
            <textarea name="textarea" id="textarea_message" rows="7" cols="50" placeholder="Mensaje"></textarea>
            <button id="submit_button" type="submit">
                Enviar
            </button>
        </form>
    </div>

</div>


<style>

    @reference "../../../styles/global.css";

    span.tw-upper-title {
        @apply text-[#9c00fda4]
    }
    span.shiny-text {
        background: linear-gradient(
            120deg,
            rgba(255, 255, 255, 0) 40%,
            rgba(255, 255, 255, 0.9) 50%,
            rgba(255, 255, 255, 0) 60%
        );
        background-size: 200% 100%;
        -webkit-background-clip: text;
        background-clip: text;
        display: inline-block;
        animation: shine 5s linear infinite;
    }
    @keyframes shine {
        0% {
            background-position: 100%;
        }
        100% {
            background-position: -100%;
        }
    }

    #content_box.tw-content_box {
        margin-top: 20px;
    }

    .tw-info_content__location {
        margin-top: 20px;
    }

    .tw-form_content__box {
        margin-top: 20px;
        & input.tw-form_input {
            background-color: #121212;
            padding: 10px;
            color: #dfdfdf;
            border: #212121 solid 1px;
            margin-top: 20px;
            font-size: 16px;
            font-family: var(--fonts-ubuntu_regular);
            @apply rounded-sm;
        };
        & input.tw-form_input:focus {
            outline: 2px solid #a476ff;
        };
        & textarea {
            background-color: #121212;
            padding: 10px;
            color: #dfdfdf;
            border: #212121 solid 1px;
            margin-top: 20px;
            font-size: 16px;
            font-family: var(--fonts-ubuntu_regular);
        };
        & textarea:focus {
            outline: 2px solid #a476ff;
        };
        & button {
            margin-top: 20px;
            background-color: #191919;
            color: #8c8c8c;
        };
        & button:hover {
            background-color: #1f1f1f;
            color: #dfdfdf;
        };
    }

</style>

<script>

    const form = document.getElementById('form_content__box');

    form?.addEventListener( 'submit', (e) => {
        e.preventDefault();
    } );

</script>